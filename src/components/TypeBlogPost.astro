---
import { getEntry, type CollectionEntry } from "astro:content";
import { Formatter } from "../utils/formatter.ts";
import { Image } from "astro:assets";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, date, author, tags, image } = post.data;
const authorEntry: any = await getEntry("author", author.id);
console.log("Author Entry: ", image);
---

<article class="flex max-w-xl flex-col items-start justify-between">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime={date.toISOString()} class="text-gray-400"
      >{Formatter.formatDate(date)}</time
    >
    {
      tags.map((label: string) => (
        <a
          href="#"
          class="relative z-10 rounded-full bg-gray-800/60 px-3 py-1.5 font-medium text-gray-300 hover:bg-gray-800"
        >
          {label}
        </a>
      ))
    }
  </div>
  <div class="group relative grow">
    <h3
      class="mt-3 text-lg/6 font-semibold text-white group-hover:text-gray-300"
    >
      <a href={`/posts/${post.slug}`}>
        {title}
      </a>
    </h3>
    <p class="mt-5 line-clamp-3 text-sm/6 text-gray-400">
      {description}
    </p>
  </div>
  <div class="text-sm/6">
    <p class="font-semibold text-white">
      <a href={`/blog/${author.id}`}>
        {authorEntry?.data.name}
      </a>
    </p>
    <p class="text-gray-400">{"Co-Founder / CTO"}</p>
  </div>
  <div class="relative mt-8 flex items-center gap-x-4 justify-self-end">
    <Image
      src={image}
      alt={`Image of ${title}`}
      class="rounded-2xl"
      width={300}
      height={300}
      quality="low"
      loading="lazy"
      transition:name={`${post.slug}-image`}
    />
  </div>
</article>
